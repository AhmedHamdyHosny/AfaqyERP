@model Afaqy_Store.DataLayer.Branch
@using Classes.Helper;
@{
    ViewBag.Title = Resources.Adminstration.BranchCreate;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.Adminstration.BranchNew</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.BranchId, Resources.Adminstration.BranchId, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.BranchId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BranchName_en,Resources.Adminstration.BranchNameEn, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.BranchName_en, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BranchName_en, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BranchName_ar, Resources.Adminstration.BranchNameAr, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.BranchName_ar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BranchName_ar, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CountryId, Resources.Adminstration.Country, htmlAttributes: new { @class = "text-info" })
                @Html.CustomDropdownListFor(model => model.CountryId, (IEnumerable<CustomSelectListItem>)ViewData["CountryId"], null, Resources.Resource.SelectItem, htmlAttributes: new { @class = "form-control", @name = "CountryId", @id = "CountryId" }) 
                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="@Resources.Resource.ButtonSave" class="btn btn-success" />
        <button class="btn btn-default" type="button" ng-click="cancel()" >@Resources.Resource.ButtonCancel</button>
    </div>

}


@section scripts {
    <!--Jquery Select2-->
    <script src="~/Content/js/select2/select2.js"></script>
    <script>
        $(document).ready(function () {
            //--Jquery Select2--
            $("#CountryId").select2();

            $('#form').submit(function (event) {
                if (!$(this).valid()) {
                    event.preventDefault();
                }

            });
        });
    </script>
}




