@model Afaqy_Store.DataLayer.CustomerContact
@using BeyondThemes.Bootstrap;
@{
    ViewBag.Title = @Resources.ServerManagement.CreateCustomerContact;
    Layout = "~/Views/Shared/_Popup.cshtml";
}



<div class="modal-header" id="gridDiv">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.ServerManagement.NewCustomerContact</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    <div class="modal-body withVScroll" >
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.ContactName_en, Resources.ServerManagement.ContactNameEn, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.ContactName_en, new { htmlAttributes = new { @class = "form-control", data_ng_model = "ContactName_en" } })
                    @Html.ValidationMessageFor(model => model.ContactName_en, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.ContactName_ar, Resources.ServerManagement.ContactNameAr, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.ContactName_ar, new { htmlAttributes = new { @class = "form-control", data_ng_model = "ContactName_ar" } })
                    @Html.ValidationMessageFor(model => model.ContactName_ar, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.Position_en, Resources.ServerManagement.CustomerContactPositionEn, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.Position_en, new { htmlAttributes = new { @class = "form-control", data_ng_model = "Position_en" } })
                    @Html.ValidationMessageFor(model => model.Position_en, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-6 form-group">
                    @Html.LabelFor(model => model.Position_ar, Resources.ServerManagement.CustomerContactPositionAr, htmlAttributes: new { @class = "text-info" })
                    @Html.EditorFor(model => model.Position_ar, new { htmlAttributes = new { @class = "form-control", data_ng_model = "Position_ar" } })
                    @Html.ValidationMessageFor(model => model.Position_ar, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                @if (Model == null || Model.DolphinId != -1)
                {
                    <div class="col-xs-6 form-group" id="DolphinDiv">
                        @Html.LabelFor(model => model.DolphinId, Resources.ServerManagement.CustomerDolphinId, htmlAttributes: new { @class = "text-info" })
                        @Html.EditorFor(model => model.DolphinId, new { htmlAttributes = new { @class = "form-control", data_ng_model = "DolphinId" } })
                        @Html.ValidationMessageFor(model => model.DolphinId, "", new { @class = "text-danger" })
                    </div>
                }

                @*<div class="form-group">
                    @Html.Bootstrap().CheckBoxFor(model => model.IsDefault).Text(Resources.Resource.IsDefault).HtmlAttributes(new { @class = "colored-danger", data_ng_model = "IsDefault" })
                </div>*@

            </div>
            <div class="table-toolbar">
                <a ng-click="CreateContactDetials()" class="btn purple" id="addBtn">
                    <i class="fa fa-plus"></i> @Resources.Resource.ButtonAdd
                </a>
                <a ng-click="DeleteContactDetialsItems($event);" class="btn btn-danger">
                    <i class="fa fa-times"></i> @Resources.Resource.ButtonDelete
                </a>
            </div>
            <div class="form-group">
                @{ Html.RenderAction("Partial_Grid", "Common", new { GridId = "contactDetailsGrid", UiGrid = "contactDetailsGridOptions", EnablePagination = false }); }
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input ng-click="saveCustomerContact()" type="button" value="@Resources.Resource.ButtonSave" class="btn btn-success" />
        <button class="btn btn-default" type="button" ng-click="cancel()">@Resources.Resource.ButtonCancel</button>
    </div>

}

@section scripts {
    <script>

        $(document).ready(function () {
            $('#form').submit(function (event) {
                if (!$(this).valid()) {
                    event.preventDefault();
                }
            });

        });
    </script>
}










