@model Afaqy_Store.Models.DeliveryRequestDetailsViewModel
@using Classes.Helper;
@using Newtonsoft.Json;
@{
    ViewBag.Title = Resources.Store.DeliveryRequestAssign;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.Adminstration.TechniqueSystemNew</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    <div class="modal-body withVScroll" ng-init="bindGirdData()">
        @Html.HiddenFor(model => model.DeliveryRequestId);
        <div class="row">
            <div class="col-xs-6 form-group">
                <dl class="dl-horizontal">
                    <dt>
                        @Resources.Sales.POS
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ps_name)
                    </dd>

                    <dt>
                        @Resources.Sales.SaleTransactionType
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SaleTransactionType_en)
                    </dd>

                    <dt>
                        @Resources.Sales.CustomerContact
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.contact_name)
                    </dd>

                    <dt>
                        @Resources.Sales.AltContactName
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AlternativeContactName)
                    </dd>

                    <dt>
                        @Resources.Store.DeliveryDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeliveryRequestDateTime)
                    </dd>

                    <dt>
                        @Resources.Resource.IsBlock
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Block)
                    </dd>

                    <dt>
                        @Resources.Resource.CreateUserFullNameEn
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreateUser_FullName_en)
                    </dd>

                    <dt>
                        @Resources.Resource.ModifyUserFullNameEn
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ModifyUser_FullName_en)
                    </dd>

                    <dt>
                        @Resources.Store.WithInstallationService
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.InstallationService)
                    </dd>

                </dl>
            </div>
            <div class="col-xs-6 form-group">
                <dl class="dl-horizontal">
                    <dt>
                        @Resources.Adminstration.Warehouse
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.wa_name)
                    </dd>

                    <dt>
                        @Resources.ServerManagement.Customer
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CustomerName)
                    </dd>

                    <dt>
                        @Resources.ServerManagement.System
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SystemName)
                    </dd>

                    <dt>
                        @Resources.Sales.AltContactTelephone
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AlternativeContactTelephone)
                    </dd>

                    <dt>
                        @Resources.Store.DeliveryRequestStatus
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeliveryRequestStatus_en)
                    </dd>

                    <dt>
                        @Resources.Store.DeliveryRequestNote
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Note)
                    </dd>

                    <dt>
                        @Resources.Resource.CreateDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>

                    <dt>
                        @Resources.Resource.ModifyDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ModifyDate)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3  form-group">
                <label class="text-info">@Resources.Store.ActualDeliveryDate</label>
                <span class="input-icon icon-right">
                    <input name="ActualDeliveryRequestDate_Str" class="form-control date-picker" id="DeliveryRequestDate_Str" type="text" data-date-format="dd/mm/yyyy" value="@DateTime.Parse(Model.DeliveryRequestDateTime).ToShortDateString()">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
            <div class="col-xs-3 form-group">
                <label class="text-info">@Resources.Store.ActualDeliveryTime</label>
                <div class="input-group">
                    <input class="form-control" name="ActualDeliveryRequestTime_Str" id="DeliveryRequestTime_Str" type="text" value="@DateTime.Parse(Model.DeliveryRequestDateTime).ToShortTimeString()">
                    <span class="input-group-addon">
                        <i class="fa fa-clock-o"></i>
                    </span>
                </div>
            </div>
            <div class="col-xs-6 form-group">
                @Html.LabelFor(model => model.DeliveryRequestTechnician, Resources.Adminstration.Technician, htmlAttributes: new { @class = "text-info" })
                
                @Html.DropDownList("RequestTechnician", (IEnumerable<CustomSelectListItem>)ViewBag.Technician, null, htmlAttributes: new { @class = "form-control", @id = "Technician", @multiple = "multiple" })
                @Html.ValidationMessageFor(model => model.DeliveryRequestTechnician, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 form-group">
                @{ Html.RenderAction("Partial_Grid", "Common", new { EnablePagination = false }); }
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" type="submit">@Resources.Resource.ButtonAssign</button>
        <button class="btn btn-default" type="button" ng-click="cancel()" >@Resources.Resource.ButtonCancel</button>
    </div>

}


@section scripts {
    <!--Bootstrap Date Picker-->
    <script src="~/Content/js/datetime/bootstrap-datepicker.js"></script>
    <!--Bootstrap Time Picker-->
    <script src="~/Content/js/datetime/bootstrap-timepicker.min.js"></script>
    <!--Jquery Select2-->
    <script src="~/Content/js/select2/select2.js"></script>
    <script>
        var gridData = @Html.Raw(JsonConvert.SerializeObject(Model.DeliveryRequestDetails));
        var detailsRequestDetailsGridColumnDefs = [
            { field: 'fa_name', name: '@Resources.Store.ItemFamily', width: 150 },
            { field: 'ia_item_code', name: '@Resources.Store.DeviceModelType', width: 200 },
            { field: 'Quantity', name: '@Resources.Store.Quantity', width: 100 },
            { field: 'Note', name: '@Resources.Resource.Note', width: 290 }
        ];
        $(document).ready(function () {
            //--Jquery Select2--
            $("#Technician").select2();
            $('.date-picker').datepicker({startDate: new Date()});

            $('#form').submit(function (event) {
                if (!$(this).valid()) {
                    event.preventDefault();
                }
            });
        });
    </script>
}




