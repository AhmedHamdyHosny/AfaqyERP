@model Afaqy_Store.Models.DeliveryRequestDetailsViewModel
@using Newtonsoft.Json;
@{
    ViewBag.Title = Resources.Store.DeliveryRequestDetails;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.Store.DeliveryRequestDetails</h2>
</div>

@using (Html.BeginForm())
{

    <div class="modal-body withVScroll" ng-init="bindGirdData()">
        @Html.HiddenFor(model => model.DeliveryRequestId)
        <div class="row">
            <div class="col-xs-6 form-group">
                <dl class="dl-horizontal">
                    <dt>
                        @Resources.Sales.POS
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ps_name)
                    </dd>

                    <dt>
                        @Resources.Sales.SaleTransactionType
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SaleTransactionType_en)
                    </dd>

                    <dt>
                        @Resources.Sales.CustomerContact
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.contact_name)
                    </dd>

                    <dt>
                        @Resources.Sales.AltContactName
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AlternativeContactName)
                    </dd>

                    <dt>
                        @Resources.Store.DeliveryDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeliveryRequestDateTime)
                    </dd>

                    <dt>
                        @Resources.Store.DeliveryTechnician
                    </dt>
                    <dd>
                        @string.Join(", ",Model.DeliveryRequestTechnician.Select(x=>x.name))
                    </dd>

                    <dt>
                        @Resources.Resource.IsBlock
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Block)
                    </dd>

                    <dt>
                        @Resources.Store.DeliveryRequestNote
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Note)
                    </dd>

                    <dt>
                        @Resources.Resource.CreateUserFullNameEn
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreateUser_FullName_en)
                    </dd>

                    <dt>
                        @Resources.Resource.ModifyUserFullNameEn
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ModifyUser_FullName_en)
                    </dd>

                </dl>
            </div>
            <div class="col-xs-6 form-group">
                <dl class="dl-horizontal">
                    <dt>
                        @Resources.Adminstration.Warehouse
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.wa_name)
                    </dd>

                    <dt>
                        @Resources.ServerManagement.Customer
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CustomerName)
                    </dd>

                    <dt>
                        @Resources.ServerManagement.System
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SystemName)
                    </dd>

                    <dt>
                        @Resources.Sales.AltContactTelephone
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AlternativeContactTelephone)
                    </dd>

                    <dt>
                        @Resources.Store.ActualDeliveryDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ActualDeliveryDateTime)
                    </dd>
                    <dt>
                        @Resources.Store.DeliveryRequestStatus
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DeliveryRequestStatus_en)
                    </dd>

                    <dt>
                        @Resources.Store.WithInstallationService
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.InstallationService)
                    </dd>

                    <dt>
                        @Resources.Resource.CreateDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreateDate)
                    </dd>

                    <dt>
                        @Resources.Resource.ModifyDateTime
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ModifyDate)
                    </dd>

                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 form-group">
                @{ Html.RenderAction("Partial_Grid", "Common", new { EnablePagination = false }); }
            </div>
        </div>
        
        
    </div>
    <div class="modal-footer"> 
        @if ((bool)ViewBag.ShowStoreReceivedBtn)
        {
            <button class="btn btn-success" type="submit">@Resources.Resource.ButtonSave</button> @*ng-show="showSubmit"*@
        }
        else
        {
            <button class="btn btn-success" type="button" ng-click="cancel()">@Resources.Resource.ButtonOk</button> @*ng-show="!showSubmit"*@
        }
        
        
    </div>
}

@section scripts{
    
    <script>
        var gridData = @Html.Raw(JsonConvert.SerializeObject(Model.DeliveryRequestDetails));
        var detailsRequestDetailsGridColumnDefs = [
            { field: 'fa_name', name: '@Resources.Store.ItemFamily', width: 150 },
            { field: 'ia_item_code', name: '@Resources.Store.DeviceModelType', width: 200 },
            { field: 'Quantity', name: '@Resources.Store.Quantity', width: 100 },
            { field: 'Note', name: '@Resources.Resource.Note', width: 290 }
        ];
    </script>
}