@model Afaqy_Store.DataLayer.Device
@using Classes.Helper;

@{
    ViewBag.Title = Resources.Store.DeviceCreate;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.Store.DeviceNew</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.SerialNumber, Resources.Store.DeviceSerialNumber, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.SerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SerialNumber, "", new { @class = "text-danger" })
               
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IMEI, Resources.Store.DeviceIMEI, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.IMEI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IMEI, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Firmware, Resources.Store.Firmware, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.Firmware, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Firmware, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ModelTypeId, Resources.Store.DeviceModelType, htmlAttributes: new { @class = "text-info" })
                @Html.CustomDropdownListFor(model => model.ModelTypeId, (IEnumerable<CustomSelectListItem>)ViewData["ModelTypeId"], null, Resources.Resource.SelectItem, htmlAttributes: new { @class = "form-control", @name = "ModelTypeId", @id = "ModelTypeId" }) 
                @Html.ValidationMessageFor(model => model.ModelTypeId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="@Resources.Resource.ButtonSave" class="btn btn-success" />
        <button class="btn btn-default" type="button" ng-click="cancel()" >@Resources.Resource.ButtonCancel</button>
    </div>

}

@section scripts {
    <!--Jquery Select2-->
    <script src="~/Content/js/select2/select2.js"></script>
    <script>
        $(document).ready(function () {
            //--Jquery Select2--
            $("#ModelTypeId").select2();

            $('#form').submit(function (event) {
                if (!$(this).valid()) {
                    event.preventDefault();
                }
                
            });
        });
    </script>
}




