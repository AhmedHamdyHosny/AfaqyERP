@model Afaqy_Store.Models.DeviceEditModel
@using Classes.Helper;
@{
    ViewBag.Title = Resources.Store.DeviceEdit;
    Layout = "~/Views/Shared/_Popup.cshtml";
}



<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.Store.DeviceEdit</h2>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => Model.EditItem.DeviceId)
            <div class="form-group">
                @Html.LabelFor(model => Model.EditItem.SerialNumber,Resources.Store.DeviceSerialNumber, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => Model.EditItem.SerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => Model.EditItem.SerialNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EditItem.IMEI,Resources.Store.DeviceIMEI, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.EditItem.IMEI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EditItem.IMEI, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EditItem.Firmware, Resources.Store.Firmware, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.EditItem.Firmware, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EditItem.Firmware, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.EditItem.ModelType_ia_item_id, Resources.Store.DeviceModelType, htmlAttributes: new { @class = "text-info" })
                @Html.CustomDropdownListFor(m => m.EditItem.ModelType_ia_item_id, Model.ModelType, null, Resources.Resource.SelectItem , htmlAttributes : new { @class = "form-control" ,@name = "DeviceModelTypeId", @id = "DeviceModelTypeId" }) 
                @Html.ValidationMessageFor(model => model.EditItem.ModelType_ia_item_id, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.HiddenFor(model => model.EditItem.Warehouse_wa_code)
                @Html.HiddenFor(model=>model.EditItem.DeviceStatusId)
                @Html.HiddenFor(model => model.EditItem.CreateUserId)
                @Html.HiddenFor(model => model.EditItem.CreateDate)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="@Resources.Resource.ButtonSave" class="btn btn-success" />
        <button class="btn btn-default" type="button" ng-click="cancel()">@Resources.Resource.ButtonCancel</button>
    </div>
}




@section scripts {
    <!--Jquery Select2-->
    <script src="~/Content/js/select2/select2.js"></script>
    <script>
        $(document).ready(function () {
            //--Jquery Select2--
            $("#ModelType_ia_item_id").select2();

            $('#form').submit(function (event) {
                if (!$(this).valid()) {
                    event.preventDefault();
                }

            });
        });
    </script>
}