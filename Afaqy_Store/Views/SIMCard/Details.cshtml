@model Afaqy_Store.Models.SIMCardViewModel

@{
    ViewBag.Title = Resources.ServerManagement.SIMCardDetails;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.ServerManagement.SIMCardDetails</h2>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>
                @Resources.ServerManagement.SIMCardContract
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SIMCardContract.ContractNo)
            </dd>
            <dt>
                @Resources.ServerManagement.SIMCardCompanySerialNumber
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CompanySerialNumber)
            </dd>
            <dt>
               @Resources.ServerManagement.SIMCardSerialNumber
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SerialNumber)
            </dd>
            <dt>
               @Resources.ServerManagement.SIMCardGSM
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GSM)
            </dd>
            <dt>
                @Resources.ServerManagement.SIMCardAltGSM
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AlternativeGSM)
            </dd>
            <dt>
                @Resources.ServerManagement.SIMCardPurchaseDate
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PurchaseDate_Format)
            </dd>
            <dt>
                @Resources.ServerManagement.Cost
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cost)
            </dd>
            <dt>
                @Resources.ServerManagement.Branch
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Branch.BranchName_en)
            </dd>
            <dt>
                @Resources.ServerManagement.SIMCardStatusNameEn
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SIMCardStatus.SIMCardStatusName_en)
            </dd>
            <dt>
                @Resources.Resource.Block
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Block)
            </dd>
            <dt>
                @Resources.Resource.CreateUserFullNameEn 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateUser.FullName_En)
            </dd>

            <dt>
                @Resources.Resource.CreateDateTime 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt>
                @Resources.Resource.ModifyUserFullNameEn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifyUser.FullName_En)
            </dd>

            <dt>
                @Resources.Resource.ModifyDateTime 
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifyDate)
            </dd>

        </dl>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" type="button" ng-click="cancel()">@Resources.Resource.ButtonOk</button>
    </div>
}
