@model Afaqy_Store.Models.SIMCardContractViewModel

@{
    ViewBag.Title = Resources.Adminstration.SIMCardContractDetails;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.Adminstration.SIMCardContractDetails</h2>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>
               @Resources.Adminstration.SIMCardContractId
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SIMCardContractId)
            </dd>
            <dt>
               @Resources.Adminstration.SIMCardProvider
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SIMCardProvider.ProviderName_en)
            </dd>
            <dt>
                @Resources.Adminstration.SIMCardContractNo
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContractNo)
            </dd>
            <dt>
                @Resources.Adminstration.CurrentCost
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CurrentCost)
            </dd>
            <dt>
                @Resources.Resource.Currency
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Currency.CurrencyName_en)
            </dd>
            <dt>
                @Resources.Adminstration.ContractDate
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContractDate)
            </dd>
            <dt>
                @Resources.Adminstration.ExpiryDate
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ExpiryDate)
            </dd>
            <dt>
                @Resources.Resource.CreateUserFullNameEn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateUser.FullName_En)
            </dd>

            <dt>
                @Resources.Resource.CreateDateTime
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt>
                @Resources.Resource.ModifyUserFullNameEn
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifyUser.FullName_En)
            </dd>

            <dt>
                @Resources.Resource.ModifyDateTime
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModifyDate)
            </dd>
        </dl>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" type="button" ng-click="cancel()">@Resources.Resource.ButtonOk</button>
    </div>
}
