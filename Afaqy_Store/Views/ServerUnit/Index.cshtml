@using BeyondThemes.Bootstrap;
@using Classes.Utilities;
@using Classes.Common;
@{
    ViewBag.Title = Resources.ServerManagement.ServerUnit;
    Layout = "~/Views/Shared/_Default.cshtml";
}

<br />
<div class="row" ng-controller="ServerUnitCtrl">
    <div class="col-xs-12 col-md-12">
        <div class="widget">
            <div class="widget-header ">
                <span class="widget-caption">@Resources.ServerManagement.ServerUnit</span>
                <div class="widget-buttons">
                    <a href="javascript:void(0);" data-toggle="maximize">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a href="javascript:void(0);" data-toggle="collapse">
                        <i class="fa fa-minus"></i>
                    </a>
                    <a href="javascript:void(0);" data-toggle="dispose">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="widget-body">
                <div class="table-toolbar">
                    <div class="ToolsDiv">
                        <div class="btn-group pull-right">
                            <a class="btn btn-default" href="javascript:void(0);">@Resources.Resource.Tools</a>
                            <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);"><i class="fa fa-angle-down"></i></a>
                            <ul class="dropdown-menu dropdown-default">
                                <li>
                                    <a href="javascript:void(0);" ng-click="ExportAllDataAsCsv()">@Resources.Resource.ExportAllDataCsv</a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" ng-click="ExportVisibleDataAsCsv()">@Resources.Resource.ExportVisibleDataCsv</a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" ng-click="ExportAllDataAsPdf()">@Resources.Resource.ExportAllDataPdf</a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" ng-click="ExportVisibleDataAsPdf()">@Resources.Resource.ExportVisibleDataPdf</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Export")">@Resources.Resource.Export</a>
                                </li>
                                <li>
                                    <a onclick="showLoading();" href="@Url.Action("Synchronize")">Synchronize</a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)" ng-click="ToggoleGridFilter();">Toggole Filtering </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                @{ Html.RenderAction("Partial_Grid", "Common"); }
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>

        var gridColumnDefs = [
            { field: 'GSMNumber', name: '@Resources.ServerManagement.SIMCardGSM' },
            { field: 'SIMSerial', name: '@Resources.ServerManagement.SIMCardSerialNumber' },
            { field: 'DeviceIMEI', name: '@Resources.Store.DeviceIMEI' },
            { field: 'DeviceSerial', name: '@Resources.Store.DeviceSerialNumber' },
            { field: 'DeviceStatus', name: '@Resources.Store.DeviceStatus' },
            { field: 'IsDeleted', name: '@Resources.Resource.IsBlock' },
            { field: 'DeviceServerName', name: '@Resources.ServerManagement.DeviceServerName' },
            { field: 'LastConnection_Format', name: '@Resources.ServerManagement.LastConnection' },
            { field: 'ServerIP', name: '@Resources.ServerManagement.ServerIP' },
            { field: 'ClientId', name: '@Resources.ServerManagement.ClientId'  },
            { field: 'ClientName', name: '@Resources.ServerManagement.ClientName' },
            { field: 'ClientStatus', name: '@Resources.ServerManagement.ClientStatus' },
            { field: 'IsCorrect', name: '@Resources.Resource.IsCorrect' },
            {
                name: 'Action', cellTemplate: '<div class="ui-grid-cell-contents ng-binding ng-scope">' +
                    '<button class="btn btn-xs" ng-click="grid.appScope.details(row.entity.BrandPortId)"><i class="fa fa-info"></i>@Resources.Resource.ButtonDetails</button>' +
                    '</div>',
                enableSorting: false, enableFiltering: false
            }
        ];


        var getViewActionUrl = '@Url.Action("GetView")';
        @*var detailsActionUrl = '@Url.Action("Details")';*@

    </script>
}

