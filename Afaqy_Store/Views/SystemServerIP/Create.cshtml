@model Afaqy_Store.DataLayer.SystemServerIP
@using Classes.Helper;

@{
    ViewBag.Title = Resources.ServerManagement.SystemServerIPCreate;
    Layout = "~/Views/Shared/_Popup.cshtml";
}

<div class="modal-header">
    <button type="button" class="close" ng-click="cancel()" aria-hidden="true">&times;</button>
    <h2 class="modal-title">@Resources.ServerManagement.SystemServerIPNew</h2>
</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ServerIP, Resources.ServerManagement.ServerIP, htmlAttributes: new { @class = "text-info" })
                @Html.EditorFor(model => model.ServerIP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServerIP, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.SystemId, Resources.ServerManagement.System, htmlAttributes: new { @class = "text-info" })
                @Html.CustomDropdownListFor(model => model.SystemId, (IEnumerable<CustomSelectListItem>)ViewBag.SystemId, null, Resources.Resource.SelectItem, htmlAttributes: new { @class = "form-control", @name = "SystemId", @id = "SystemId" })
                @Html.ValidationMessageFor(model => model.SystemId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" value="@Resources.Resource.ButtonSave" class="btn btn-success" />
        <button class="btn btn-default" type="button" ng-click="cancel()" >@Resources.Resource.ButtonCancel</button>
    </div>

}


@section scripts {
<script src="~/Content/js/select2/select2.js"></script>
<script>
    $(document).ready(function () {
        //--Jquery Select2--
        $("#SystemId").select2();
        $('#form').submit(function (event) {
            if (!$(this).valid()) {
                event.preventDefault();
            }
        });
    });
</script>
}
